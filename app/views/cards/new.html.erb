<div class="container">
  <h1>Write something fun to guess <%= session[:card_count] %>/5</h1>

  <%= simple_form_for [@game, @user, @card], url: game_user_cards_path(@game, @user), method: :post do |form| %>
    <div class="field">
      <%= form.input :content, placeholder: "Write here...", label: false, input_html: { class: "game-code-input" } %>
    </div>
    <div>
      <p>Some examples:</p>
      <p>“<%= @examples.join('”, “') %>”</p>
    </div>
    <div>
      <%= form.button :submit, "Enter a word", class: "btn btn-primary" %>
    </div>
  <% end %>

  <% if session[:card_count] == 6 %>
    <script type="text/javascript">
      window.location = "<%= waiting_path %>"; // Adjust this to your actual waiting path
    </script>
  <% end %>
</div>
