
<div class="index-wrapper">
  <div class="center-wrapper">
    <div>
      <h1>Time's Up</h1>
      <%= image_tag ('avatar_1.png'), class: 'avatar-rounded-big' %>
      <h1>"player.name" scored X points!</h1>
    </div>
    <div>
      <h1><i class="fa-solid fa-trophy fa-2xl"></i></h1>
    </div>
    <div>
      <% if current_user == @player_order[@game_state.turn_counter] %>
      <%= link_to 'Next player', play_path(game_id: @game.id), class: 'btn btn-red' %>
      <% end %>
    </div>
  </div>
</div>
