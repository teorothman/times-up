<div class="container">
  <div class="center-wrapper">
    <div class="top-wrapper">
    
      <% if @game_state.status == 'round1_play' || @game_state.status == 'round1_results' %>
        <h1>Round 1</h1>
      <% elsif @game_state.status == 'round2_play' || @game_state.status == 'round2_results' %>
        <h1>Round 2</h1>
      <% elsif @game_state.status == 'round3_play' || @game_state.status == 'round3_results' %>
        <h1>Round 3</h1>
      <% else %>
      <% end %>

      <h1> Team <%= current_user.team.name %></h1>
      <h1><%= @player_order[@game_state.turn_counter].username %></h1>
    </div>
    <%= image_tag ('avatar_1.png'), class: 'avatar-rounded-big' %>
    <% if current_user == @player_order[@game_state.turn_counter] %>
    <%= link_to 'Play', play_path(game_id: @game.id), class: 'btn btn-red', data: {turbo: false} %>
    <%else %>
      <p>Wait for chosen player to get ready...</p>
    <% end %>
  </div>
</div>
