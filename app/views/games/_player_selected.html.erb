<div class="center-wrapper">
  <div class="top-wrapper">

    <% if GamesStatus.find_by(game_id: game.id) == 'round1_play' || GamesStatus.find_by(game_id: game.id) == 'round1_results' %>
      <h1>Round 1</h1>
    <% elsif GamesStatus.find_by(game_id: game.id) == 'round2_play' || GamesStatus.find_by(game_id: game.id) == 'round2_results' %>
      <h1>Round 2</h1>
    <% elsif GamesStatus.find_by(game_id: game.id) == 'round3_play' || GamesStatus.find_by(game_id: game.id) == 'round3_results' %>
      <h1>Round 3</h1>
    <% else %>
    <% end %>

    <%# creating new variable to make it work BUT IT CHANGES ORDER AGAIN after player is selected so it's ok for code but NOT OK FOR KEEPING GOOD ORDER%>
    <% player_order = @game.teams.first.users.to_a.zip(@game.teams.second.users).flatten %>

    <h1> Team <%= player_order[GamesStatus.find_by(game_id: game.id).turn_counter].team.name %></h1>
    <h1><%= player_order[GamesStatus.find_by(game_id: game.id).turn_counter].username %></h1>
    <% a = Avatar.find(player_order[GamesStatus.find_by(game_id: game.id).turn_counter].avatar_id) %>
    <%= cl_image_tag(a.photo.key, class: 'avatar-rounded-big') %>

  </div>
  <p>Wait for chosen player to get ready...</p>
</div>
